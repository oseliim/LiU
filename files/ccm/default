MENU SEPARATOR

LABEL -
	MENU LABEL Other options:
	MENU DISABLE

LABEL memtest86+
	MENU LABEL ^Memory test
	MENU INDENT 2
	KERNEL memtest.0

LABEL hd00
#	MENU DEFAULT
	MENU LABEL Boot from the first local ^disk
	MENU INDENT 2
	LOCALBOOT 0

MENU END
