    if (exit_timer_id) g_source_remove(exit_timer_id);
    
    if (docker_pid > 0) {
        kill(docker_pid, SIGTERM);
        waitpid(docker_pid, NULL, 0);
    }
    
    if (script_pid > 0) {
        kill(script_pid, SIGTERM);
        waitpid(script_pid, NULL, 0);
    }
    
    g_object_unref(app);
    
    return status;
